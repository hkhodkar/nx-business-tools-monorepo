{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bt-libs/finance/data-access/expenses": [
        "libs/finance/data-access/expenses/src/index.ts"
      ],
      "@bt-libs/shared/ui/common-component": [
        "libs/shared/ui/common-component/src/index.ts"
      ],
      "@bt-libs/shared/ui/models": ["libs/shared/ui/models/src/index.ts"],
      "@bt-libs/shared/ui/utils": ["libs/shared/ui/utils/src/index.ts"],
      "@business-tools/workspace-generators-plugin": [
        "libs/workspace-generators-plugin/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
